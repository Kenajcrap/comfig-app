---
const { className } = Astro.props;
---

<fitty-text data-class-name={className}></fitty-text>

<script>
  import fitty from "fitty";

  class FittyText extends HTMLElement {
    connectedCallback() {
      fitty(this.dataset.className as string);
    }
  }

  if (!customElements.get("app-loader")) {
    customElements.define("fitty-text", FittyText);
  }
</script>
