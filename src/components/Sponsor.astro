<script>
  function generateCoolString(str) {
    const count = Math.floor(Math.random() * 10);
    for (let i = 0; i < count; i++) {
      const index = Math.floor(Math.random() * str.length);
      str = str.substring(0, index) + "​" + str.substring(index);
    }
    return str;
  }

  const r = (Math.random() + 1).toString(36).substring(7);
  const sponsors = [
    {
      name: "tradeit.gg",
      logo: "/img/third_party/tradeit.webp",
      logo_alt: "tradeit.gg logo",
      url: "https://tradeit.gg/?aff=comfig",
      title: "Trade, buy or sell items",
      description: "Trade items instantly for real money with the lowest fees.\n" +
        "Fully automated. Over 45 million successful trades.\n",
      cta: "Get started now with $5 credit and 35% off your first trade.",
      background: "linear-gradient(135deg, rgba(33,37,41, 0.01), rgba(33,37,41, 1) 60%),radial-gradient(ellipse at top left, rgba(255,255,255, 0.5), transparent 50%),radial-gradient(ellipse at top right, rgba(255,228,132, 0.5), transparent 50%),radial-gradient(ellipse at center right, rgba(112.520718,44.062154,249.437846, 0.5), transparent 50%),radial-gradient(ellipse at center left, rgba(13,110,253, 0.5), transparent 50%)"
    },
    {
      name: "TF2 Coaching Central",
      logo: "/img/third_party/tf2cc.webp",
      logo_alt: "TF2CC logo",
      url: "https://discord.gg/tf2-coaching-central-tf2cc-727627956058325052",
      title: "Coach or get coached for competitive TF2!",
      description: "TF2CC is a resource hub for new comp players.\n" +
        "Provides guides, mentoring, demo reviews, pugs, and the upcoming Newcomer's Cup!\n",
      cta: "Whether you're experienced or a new player, join the Discord and get involved!",
      background: "linear-gradient(135deg, rgba(33,37,41, 0.01), rgba(33,37,41, 1) 60%),radial-gradient(ellipse at top left, rgba(255,255,255, 0.5), transparent 50%),radial-gradient(ellipse at top right, rgb(255 174 132 / 50%), transparent 50%),radial-gradient(ellipse at center right, rgb(249 44 78 / 50%), transparent 50%),radial-gradient(ellipse at center left, rgb(253 13 13 / 50%), transparent 50%)"
    }
  ];
  const sponsor = sponsors[Math.floor(Math.random() * sponsors.length)];
  const name = generateCoolString(sponsor.name);
  const background = sponsor.background;
  const logo = sponsor.logo;
  const logo_alt = generateCoolString(sponsor.logo_alt);
  const title = generateCoolString(sponsor.title);
  const description = sponsor.description.split("\n").map((d) => generateCoolString(d)).join("<br/>");
  const cta = generateCoolString(sponsor.cta);
  const url = sponsor.url;

  const linkElement = document.querySelector("a[href='https://mastercomfig.com/?aff=comfig']");

  const card = linkElement.closest(".card");
  card.classList.add(r);
  document.head.insertAdjacentHTML("beforeend", `<style>
    .${r} {
      text-align: left !important;
      background: ${background};
    }
    .${r} a {
      cursor: pointer;
      position: absolute;
      top: 0;
      right: 0;
      bottom: 0;
      left: 0;
      z-index: 1;
      content: "";
    }
  </style>`);
  
  const img = card.querySelector("img");
  img.src = logo;
  img.alt = logo_alt;

  const footer = card.querySelector(".card-footer");
  const sponsoredBy = generateCoolString("Sponsored by");
  footer.innerHTML = `${sponsoredBy} <strong>${name}</strong>`;

  const row = card.querySelector(".row");
  const col2 = row.querySelector(".col-auto:nth-child(2)");
  col2.classList.remove("text-muted");
  col2.classList.add("text-white");
  col2.innerHTML = `<strong class="fw-bold h5">${title}</strong><br/>${description}<strong>${cta}</strong>`;

  linkElement.removeAttribute("href");
  linkElement.addEventListener("click", function(e) {
    e.preventDefault();
    window.open(url, "_blank");
  });
</script>
